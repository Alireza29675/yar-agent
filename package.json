{
  "name": "yar-agent",
  "description": "Understand Complex Codebases Fast - An agentic CLI tool for analyzing and understanding codebases",
  "version": "0.3.0",
  "author": "Alireza Sheikholmolouki",
  "bin": {
    "yar": "./bin/run.js"
  },
  "bugs": "https://github.com/Alireza29675/yar/issues",
  "preferGlobal": true,
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.5",
    "@anthropic-ai/sdk": "^0.65.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "figures": "^6.1.0",
    "gradient-string": "^3.0.0",
    "ora": "^9.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/compat": "^1",
    "@oclif/prettier-config": "^0.2.1",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^24.6.2",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./src/prompts",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/Alireza29675/yar",
  "keywords": [
    "cli",
    "ai",
    "claude",
    "code-analysis",
    "codebase",
    "documentation",
    "git-history",
    "presentation",
    "developer-tools"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "yar",
    "dirname": "yar",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " "
  },
  "repository": "Alireza29675/yar",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b && shx cp -r src/prompts dist/prompts",
    "lint": "eslint",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "release": "pnpm run build && changeset publish",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts"
}